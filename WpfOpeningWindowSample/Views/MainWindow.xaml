<Window x:Class="WpfOpeningWindowSample.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WpfOpeningWindowSample.ViewModels"
        xmlns:local="clr-namespace:WpfOpeningWindowSample.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Button x:Name="btnOpen" Content="Open" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="369" Command="{Binding OpenWindowCommand}" Height="195" FontSize="72"/>

    </Grid>
</Window>
